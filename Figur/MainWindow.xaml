<Window x:Class="Figur.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Figur"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Name="grid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="101*"/>
            <ColumnDefinition Width="99*"/>
        </Grid.ColumnDefinitions>
        <Menu x:Name="menu" HorizontalAlignment="Left" Height="18" VerticalAlignment="Top" Width="294" Visibility="Visible">
            <MenuItem Header="Input" Name="miInput" Click="Click_Input"/>
            <MenuItem Header="Calc" Name="miCalc" Click="Click_Calc" />
            <MenuItem Header="Draw" Click="Click_Draw" />
            <MenuItem Header="Exit" Click="Click_Exit" />
        </Menu>        <StackPanel Name="stackpanel" Visibility="Hidden" Width="800" Margin="0,116,0,101" Grid.ColumnSpan="2">
            <TextBox Name="radius" Text="Радиус" Height="29" FontSize="18"/>
            <CheckBox  Content="Периметр" Name="P" Height="21"/>
            <CheckBox  Content="Площадь" Name="S" Height="21"/>
            <Button Content="Посчитать" Click="Click_Result" Height="55" FontSize="30"/>
        </StackPanel>
    </Grid>
</Window>
